<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                        
                                                                       
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical" android:tag="layout/layout_movie_detail_header_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/detail_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="12"
            android:singleLine="true"
            android:tag="binding_1"      
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold"
            tools:text="Star Wars: The Last Jedi" />

        <TextView
            android:id="@+id/detail_header_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:tag="binding_2"       
            tools:text="Release Date :" />

        <RatingBar
            android:id="@+id/detail_header_star"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:tag="binding_3"                   
            tools:rating="3.5f" />
    </LinearLayout>
         